generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id            String @id @default(uuid())
  name          String
  owner_name    String
  email         String @unique
  password_hash String
  whatsapp      String
  cep           String
  city          String
  state         String
  address       String

  pets Pet[]

  @@map("orgs")
}

model Pet {
  id           String @id @default(uuid())
  name         String
  description  String
  age          String
  energy_level String
  size         String
  environment  String

  org    Org    @relation(fields: [org_id], references: [id])
  org_id String

  @@map("pets")
}
